<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Islami" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/lightGold</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="lines_color" parent="Theme.Islami">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_navigation_style" parent="Theme.Islami">
        <item name="backgroundTint">@color/darkBlue</item>
    </style>

    <style name="sura_content_style" parent="Theme.Islami">
        <item name="android:textColor">@color/lightGold</item>
    </style>

    <style name="border" parent="Theme.Islami">
        <item name="android:background">@color/lightGold</item>
    </style>

    <style name="hider_color" parent="Theme.Islami">
        <item name="android:textColor">@color/lightGold</item>
    </style>

    <style name="mode" parent="Theme.Islami">
        <item name="tint">#1F2742</item>
    </style>

    <style name="arrow" parent="Theme.Islami">
        <item name="tint">@color/white</item>
    </style>

    <style name="contaner_bg" parent="Theme.Islami">
        <item name="android:tint">@color/darkBlue</item>
    </style>
    <style name="bottom_color" parent="Theme.Islami">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>